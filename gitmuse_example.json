{
	"$schema": "https://raw.githubusercontent.com/Arakiss/gitmuse/main/gitmuse/config/gitmuse-schema.json",
	"version": 1,
	"ai": {
		"provider": "ollama",
		"openai": {
			"model": "gpt-4",
			"apiKey": "YOUR_API_KEY_HERE",
			"organizationId": "YOUR_ORG_ID_HERE",
			"max_tokens": 1000,
			"temperature": 0.7
		},
		"ollama": {
			"model": "llama3.2",
			"url": "http://localhost:11434",
			"max_tokens": 1000,
			"temperature": 0.7
		}
	},
	"commit": {
		"style": "conventional",
		"maxLength": 72,
		"includeScope": true,
		"includeBody": true,
		"includeFooter": true,
		"conventionalCommitTypes": {
			"feat": "✨",
			"fix": "🐛",
			"docs": "📝",
			"style": "💎",
			"refactor": "♻️",
			"perf": "⚡",
			"test": "🧪",
			"build": "🏗️",
			"ci": "🚀",
			"chore": "🧹"
		}
	},
	"prompts": {
		"commitMessage": {
			"useDefault": true,
			"customTemplate": ""
		}
	},
	"logging": {
		"level": "INFO",
		"format": "console",
		"file": ""
	}
}
