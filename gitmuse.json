{
	"$schema": "./gitmuse-schema.json",
	"version": 1,
	"ai": {
		"provider": "ollama",
		"openai": {
			"model": "gpt4o",
			"apiKey": "",
			"organizationId": ""
		},
		"ollama": {
			"model": "llama3.1",
			"url": "http://localhost:11434"
		}
	},
	"commit": {
		"style": "conventional",
		"maxLength": 72,
		"includeScope": true,
		"includeBody": true,
		"includeFooter": true,
		"conventionalCommitTypes": {
			"feat": "✨",
			"fix": "🐛",
			"docs": "📝",
			"style": "💎",
			"refactor": "♻️",
			"perf": "⚡",
			"test": "🧪",
			"build": "🏗️",
			"ci": "🚀",
			"chore": "🧹"
		}
	},
	"prompts": {
		"commitMessage": {
			"useDefault": true,
			"customTemplate": ""
		}
	}
}
